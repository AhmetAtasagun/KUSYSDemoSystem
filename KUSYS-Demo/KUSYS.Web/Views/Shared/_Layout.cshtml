@using KUSYS.Web.Infrastructure;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KUSYS.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KUSYS.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ms-5" asp-area="" asp-controller="Home" asp-action="Index"><h2>KUSYS Demo</h2></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        @*<li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/">&#127968; Home</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Account/Logout">&#128682; Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="d-flex flex-row" style="min-height: 85vh;margin-top: -15px;">
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-light left-side-bar" style="">

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/Student" class="nav-link link-dark">&#128102; Students</a>
                </li>
                @if (Context.GetAuthUser().IsAuthorize(KeyConsts.Admin))
                {
                    <li>
                        <a href="/Course" class="nav-link link-dark">&#128366; Courses</a>
                    </li>
                    <li>
                        <a href="/User" class="nav-link link-dark">&#128104; Users</a>
                    </li>
                }
            </ul>
            <hr>
        </div>
        <div class="justify-content-center w-100 mt-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - KUSYS Demo Course Management System (for Case)
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
